#!/usr/bin/env bash

if [ -z "$1" ]
then
    echo "usage: run-locally <NAME>"
	exit
fi

YES_ALL=1 rails new $1 \
    --database=postgresql \
    --javascript=webpack \
    --skip-test \
    --skip-action-cable \
    --skip-hotwire \
    --skip-action-mailbox \
    --skip-action-text \
    --skip-hotwire \
    --skip-jbuilder \
    --template=/Users/schpet/code/tanooki-rails-template/rails-kickoff-template.rb
